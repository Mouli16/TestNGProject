</listeners>
  <test thread-count="5" name="Personal Loan">
    <classes>
      <class name="TestPackage.firstLesson">
      <methods>
      <include name ="SecondDemo"/>
      </methods>
      </class>
      <class name="TestPackage.secondLesson"/>
    </classes>
  </test> 
  <test name= "Car Loan">
  <classes>
  <class name = "TestPackage.thirdLesson">
  <methods>
    <exclude name= "mobile.*"/>
  </methods>
  </class>
  <class name = "TestPackage.fourthLesson"/>
  </classes>
   </test>
</suite> 
